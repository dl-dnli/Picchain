  .title-row {
    display: flex;
    justify-content: center;
    align-items: center;
    color: #8CC152;
    font-size: 40rpx;
    width: 100%;
    margin-top: 70rpx;
  }

  .flex-row {
    display: flex;
    margin-bottom: 1em;
    border: 1px solid #FCBB42;
    margin: 70rpx;
    border-radius: 5rpx;
  }

  .flex-row-buttons {
    display: flex;
    margin-bottom: 1em;
    margin: 70rpx;
    justify-content: center;
    align-items: center;
  }

  .form-title {
    margin-left: 30rpx;
    font-family: 'Titillium';
  }
  
  .lf--label {
    width: 2em;
    display: flex;
    align-items: center;
    justify-content: center;
    
    background: #FCBB42;
    cursor: pointer;
  }
  .lf--input {
    flex: 1;
    padding: 1em;
    border: 0;
    color: #8f8f8f;
    font-size: 1rem;
    font-family: 'Titillium';

    

    /* &:focus {
      outline: none;
      transition: transform .15s ease;
      transform: scale(1.1);
    } */
  }

  .lf--submit {
    display: block;
    text-align: center;
    width: 250rpx;
    margin-left: 30rpx;
    padding: 30rpx;
    background-color: #8CC152;
    border: 0 !important;
    color: white;
    cursor: pointer;
    font-size: 32rpx;
    font-weight: 600;
    text-shadow: 0 1px 0 rgba(black, .2);
    border-radius: 5rpx;
    font-family: 'Titillium';
    /* &:focus {
      outline: none;
      transition: transform .15s ease;
      transform: scale(1.1);
    } */
  }

  button {
    line-height: 1.4;
    box-sizing: none;
    margin-right: 0;
    padding: 30rpx !important;
    width: 250rpx;
    border: 0 !important;
  }

   .lf--cancel {
    display: block;
    text-align: center;
    width: 250rpx;
    padding: 28rpx;
    background-color: white;
    color: #8CC152;
    cursor: pointer;
    font-size: 32rpx;
    font-weight: 600;
    text-shadow: 0 1px 0 rgba(black, .2);
    border-radius: 5rpx;
    border: 1rpx solid #8CC152 !important; 
    font-family: 'Titillium';
    
    /* &:focus {
      outline: none;
      transition: transform .15s ease;
      transform: scale(1.1);
    } */
  }

::placeholder { color: #8f8f8f; }

