page {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background: #8CC152;
}
.form-container {
  width: 700rpx;
  height: 850rpx;
  position: relative;
  margin: 5px;
  background: #fff;
  border-radius: 5rpx;
  box-sizing: border-box;
  transition: .3s ease;
  box-shadow: 0 3px 10px -2px rgba(0,0,0,0.35);
  display: flex;
  justify-content: center;
  align-items: center;
}

.login-form {
  width: 100%;
  position: relative;
  border-radius: 5rpx;
  background: rgba(black, .15);
  
