page {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.camera-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 50rpx 0;
  box-sizing: border-box;
} 

.page-body {
  width: 100%;
  flex-grow: 1;
  overflow-x: hidden;
}

.page-body-info {
  display: flex;
  box-sizing: border-box;
  padding: 30rpx;
  height: 420rpx;
  border-top: 1rpx solid #D9D9D9;
  border-bottom: 1rpx solid #D9D9D9;
  align-items: center;
  justify-content: center;
}
.page-section{
  width: 100%;
  margin-bottom: 60rpx;
}

.btn-area{
  margin-top: 60rpx;
  box-sizing: border-box;
  width: 100%;
  padding: 0 30rpx;
}

.image {
  width: 100%;
  height: 360rpx;
}
.page-body-info {
  display: flex;
  box-sizing: border-box;
  padding: 30rpx;
  height: 420rpx;
  margin: 0 50rpx;
  border: 1rpx solid #D9D9D9;
  align-items: center;
  justify-content: center;
}
.input{
    padding-left: 10px;
    height: 35px;
}

.picinput{
    border-top: 0.5rpx solid #8a8a8a;
    border-bottom: 0.5rpx solid #8a8a8a;
    margin: 10rpx;
    width: 100%;
    position: relative;
    background-color: #FFFFFF;
    line-height: 2;
    font-size: 35rpx;
    padding: 15rpx;
}

.pic-submit-button {
  margin: 10rpx;
  padding: 5rpx;
  width: 200rpx;
  border-color: #8CC152; 
  color: #8CC152; 
}

button {
  margin: 100rpx;
}

.image-plus-horizontal {
  position: absolute;
  top: 50%;
  left: 50%;
  background-color: #d9d9d9;
  width: 4rpx;
  height: 80rpx;
  transform: translate(-50%, -50%);
}
.image-plus-vertical {
  position: absolute;
  top: 50%;
  left: 50%;
  background-color: #d9d9d9;
  width: 80rpx;
  height: 4rpx;
  transform: translate(-50%, -50%);
}

.image-plus {
  width: 150rpx;
  height: 150rpx;
  border: 2rpx solid #D9D9D9;
  position: relative;
}
.image-plus-nb{
  border: 0;
}