/* pages/vindex/vindex.wxss */
.card-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.card {
  height: 325px;
  width: 250px;
  /*text-shadow: 0 1px 3px rgba(0,0,0,0.6);*/
  color: black;
  position: relative;
  margin: 5px;
  box-shadow: 2px 2px 3px -1px rgba(0,0,0,0.75);
  border-radius: 8px;
}

.banner {
  /* if you have a 70px navbar => height: calc(100vh - 70px); */
  background-size: cover !important;
  background-position: center;
  height: 35vh;
  width: 100%;
  border-top-left-radius: 8px;
  border-top-right-radius: 8px;
}


.location {
  font-size: 14px;
  text-transform: uppercase;
  position: relative;
  top:20px;
}

.name {
  font-size: 24px;
  text-align: center;
  color: black;
}
.prize {
  font-size: 14px;
  word-wrap: break-word;
}

.card-container .card .vcontent {
  max-width: 250px;
  height: 100px;
  padding:  13px;
}

.border {
  border:0.2px solid #ededed;
  width: 175px;
  position: relative;
  top: 10px;
}

.flex {
  display: flex;
  justify-content: center;
}
