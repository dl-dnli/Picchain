<view class="banner" style="background-image: url('{{pin.image}}')" />

<view class="upv-tag">


      <view class="ico">
      <image src="/images/white/upvote.png" class="icon" />
      <view class="upvotes">{{pin.upvotes}}</view>
      </view>

    <view class="outline flex">
      <image class="avatar-small" src="http://media.lehighvalleylive.com/entertainment-general_impact/photo/guy-fieri-cee642e1641d34c5.jpg" />
      <view class="author-name">
        <view class="h3">{{pin.user}}</view>
      </view>
    </view>

</view>

<view class="card-container">
    <view class="avaname">
      <image class="avatar-large" src='{{location.photo}}' />

      <view class="name">{{location.name}}</view>
    </view>
  </view>

  <view class="info-container">

  <view class="prize">{{location.prize}}</view>
  </view>


  <view class="bot" bindtap="onMapBuClicked">

    <view class="address">{{location.address}}</view>
    <view class="map-icon">
      <image src="/images/white/map2.png" class="icon" />
    </view>
  </view>
<view class="flex">
<button bindtap="login" >Submit Your Photo</button>
</view>