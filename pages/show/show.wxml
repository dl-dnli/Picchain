<view class="date">{{reviews.name}}</view>

<view class="banner" style="background-image: url('{{pin.image}}');" />
<view class="h5">{{pin.upvotes}}</view>
<view class="h5">{{pin.location_id}}</view>


<view class="upv-tag">
  <view class="message" wx:for="{{reviews}}" wx:for-item="review" wx:key="review.id">
    <view class="ico-uvn">
      <image src="/images/white/upvote.png" class="icon" />
      <view class="h3">{{review.upvotes}}</view>
      <image class="avatar-small" src="{{review.image}}" />
      <view class="author-name">
        <view class="h3">{{review.name}}</view>
        <view class="date">{{review.date}}</view>
      </view>
    </view>
    <view class="h5">{{review.tags}}</view>
  </view>
</view>
<view class="date">{{date}}</view>
<view class="h5">{{tags}}</view>

<view class="mid">
  <view class="invisi-box">
    <view class="message" wx:for="{{vendor}}" wx:for-item="v" wx:key="v.id">
      <image class="avatar-large" src="{{v.image}}" />
      <view class="message-name">
        <view class="h3">{{v.name}}</view>
      </view>
  </view>
  </view>
  </view>
  <view class="lowmid">
  <view class="dec" wx:for="{{vendor}}" wx:for-item="v" wx:key="v.id">
  <view class="h3">{{v.description}}</view>
  <view class="h4">{{v.prize}}</view>
  </view>
  </view>

<view class="bot">
  <view class="message" wx:for="{{reviews}}" wx:for-item="review" wx:key="review.id">
    <view class="h5">{{review.location}}</view>
    <view class="map-icon">
      <image src="/images/white/map2.png" class="icon" />
    </view>
  </view>
</view>


<view class="bot">
  <view class="message" wx:for="{{vendors}}" wx:for-item="vendor" wx:key="review.id">
    <view class="h5">{{vendor.description}}</view>
    <view class="map-icon">
      <image src="/images/white/map2.png" class="icon" />
    </view>
  </view>
</view>