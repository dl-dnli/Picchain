/* pages/show/show.wxss */

/* Banner */
.banner {
  height: 60vh;
  /* if you have a 70px navbar => height: calc(100vh - 70px); */
  background-size: cover !important;
  box-shadow: 0 3px 10px -2px rgba(0,0,0,0.35);
}


.upv-tag {
  height: 9vh;
  display: flex;
  align-items: center;
  color: white;
  padding-left: 11px;
}

.avatar-small {
  height: 27px;
  width: 27px;
  border-radius: 20px
}

.avatar-large {
height:70px;
width:70px;
border-radius:50px;
}

.name {
  font-size: 20px;
  border-radius: 40px;
  padding: 8px 10px;
  margin-top: 5px;
}

.upv-tag .icon {
  width: 20px;
  height: 20px;
}

.bot {
  display: flex;
  align-items: center;
  border-radius: 5px;
  color: #8a8a8a;
}

.bot .icon {
  width: 25px;
  height: 25px;
}


/* Reviews */



.author-name {
  font-size: 10px;
  margin-left: 9px;
}

.map-icon {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #FFCE54;
  padding: 10rpx;
  border-radius: 5px;
  margin-left: 20rpx;
}

.card-container {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 30rpx;
}

.avaname {
  display: flex;
  justify-content: center;
  align-items: center;
  font-family: 'Titillium';
}

.info-container {
  margin: 20px 21px;
  border-radius: 5px;
  margin: 11px;
  padding: 10px;
  

}

.ico {
  background-color: #FFCE54;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 5px;
  padding: 10rpx;
  color: white;
  font-size: 12px;
}

.upvotes {
  margin-left: 3px;
  font-family: 'Titillium';
}

.address {
  overflow-wrap: break-word;
  width: 240px;
}

.username {
  font-family: 'Titillium';
  font-size: 30rpx;
}
.flex {
  display: flex;
  justify-content: center;
  align-items: center;
}

.outline {
  background-color: #A0D468;
  /* border-top-left-radius: 50px;
  border-bottom-left-radius: 50px;
  border-top-right-radius: 20px;
  border-bottom-right-radius: 20px; */
  border-radius: 5px;
  margin-left: 7px;
  padding-right: 7px;
}

button {
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50px;
  box-shadow: 2px 0px 5px 0px rgba(219,219,219,0.43);
  margin-bottom: 11px;
  padding: 20px;
  background-color: #FFCE54;
  color: white;
  width: 200px;
  height:60px;
  font-size: 16px; 
}
.submit-your-photo {
  padding: 40rpx;
  border-radius: 5px;
  background-color: #A0D468;
  color: white;
  font-family: 'Titillium';
  margin: 40rpx;
}

.prize, .address {
  font-family: 'Titillium';
  font-size: 40rpx;
}

.prize {
  margin-left: 15rpx;
}