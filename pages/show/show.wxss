/* pages/show/show.wxss */

/* Banner */
.banner {
  height: 60vh;
  /* if you have a 70px navbar => height: calc(100vh - 70px); */
  background-size: cover !important;
  box-shadow: 2px 2px 3px -1px rgba(0,0,0,0.75);
}

.upv-tag {
  height: 11vh;
}

.upv-tag .message .icon {
  width: 25px;
  height: 25px;
}

.upv-tag .message {
  display: flex;
  justify-content: space-between;
}

.upv-tag .message .ico-uvn {
  display: flex;
  color: gray;
}

.bot {
  height: 11vh;
}

.bot .message {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.bot .message .map-icon .icon {
  width: 25px;
  height: 25px; 
}

.mid {
  display: flex;
  justify-content: center;
}

.mid .invisi-box {
  display: flex;
  justify-content: center;
}

.invisi-box {
  width: 85vw;
  height: 16vh;
  border-top: 1px solid rgba(220,224,244,0.4);
  border-bottom: 1px solid rgba(220,224,244,0.4); 
}



/* Reviews */
.message {
  display: flex;
  align-items: center;
  padding: 10px;
  margins: 10px 0;
}

.message-name {
  padding-left: 10px;
}
.message-name .h3 {
  font-size: 13px;
  margin-bottom: 0px;
}
.message-name .date {
  font-size: 13px;
  font-weight: lighter;
  opacity: 0.6;
  margin-top: 5px;
}
.message image{
  width: 40px;
  height: 40px;
  border-radius: 20px;
}

.map-icon {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #E9573F;
  width: 35px;
  height: 35px;
  border-radius: 50px;
}