/* pages/show/show.wxss */

/* Banner */
.banner {
  height: 60vh;
  /* if you have a 70px navbar => height: calc(100vh - 70px); */
  background-size: cover !important;
  box-shadow: 2px 2px 3px -1px rgba(0,0,0,0.75);
}


.upv-tag {
  height: 11vh;
}

.upv-tag .message .ico-uvn .avatar-small {
  height: 25px;
  width: 25px;
  margin-left: 9px;
  border-radius: 20px
}

.mid .invisi-box .message .avatar-large {
height:70px;
width:70px;
border-radius:50px;

}

.upv-tag .message .ico-uvn .message-name h3 {
  font-size: 5;
}

.upv-tag .message .icon {
  width: 20px;
  height: 20px;
}

.upv-tag .message .ico-uvn {
  display: flex;
  align-items: center;
  color: gray;
}

.upv-tag .message {
  display: flex;
  justify-content: space-between;
}


.bot {
  height: 11vh;
}

.bot .message {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.bot .message .map-icon .icon {
  width: 25px;
  height: 25px; 
}

.mid {
  display: flex;
  justify-content: left;
}

.mid .invisi-box {
  display: flex;
  justify-content: left;
}

.invisi-box {
  width: 85vw;
  height: 16vh;
}
/* Reviews */
.message {
  display: flex;
  align-items: center;
  padding: 10px;
  margins: 10px 0;
}

.dec {
  padding: 11px;
}

.dec .h3 {
  font-size: 13px;
}

.dec .h4 {
  font-size: 10px;
}

.message-name {
  padding-left: 10px;
}
.author-name {
  font-size: 10px;
  margin-left: 9px;
}

.message-name .h3 {
  font-size: 13px;
  margin-bottom: 0px;
}
.message-name .date {
  font-size: 13px;
  font-weight: lighter;
  opacity: 0.6;
  margin-top: 5px;
}

.map-icon {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #E9573F;
  width: 35px;
  height: 35px;
  border-radius: 50px;
}